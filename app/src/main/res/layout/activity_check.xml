<!-- res/layout/activity_booking_dashboard.xml -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">

    <TextView
        android:id="@+id/userIdTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="User ID: "
        android:textSize="18sp"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-13dp"
        android:background="@color/white"
        >

        <androidx.cardview.widget.CardView
            android:id="@+id/appointmentCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true"
            android:layout_marginBottom="4dp"
            android:elevation="10dp">

            <!-- Contents inside the CardView, you can customize this as needed -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:padding="16dp"
                >


                <ImageView
                    android:id="@+id/iconImageView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="8dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/profile"
                    />

                <TextView
                    android:id="@+id/helloUsernameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/iconImageView"
                    android:text="Hello, "
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/welcomemessage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:layout_toEndOf="@id/iconImageView"
                    android:text="Check Appointment Date / Time"
                    android:textSize="16sp" />

                <!-- Notification icon on the right side -->
                <ImageView
                    android:id="@+id/notificationIcon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/notification_icon"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/dateSelectionCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/appointmentCardView"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:elevation="10dp"
            android:visibility="visible"
            app:cardCornerRadius="20dp"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="16dp">

                <!-- Date Selection Section -->
                <ImageView
                    android:id="@+id/dateIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/calendar" />

                <TextView
                    android:id="@+id/dateSelectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/dateIconImageView"
                    android:gravity="center"
                    android:text="Select Date"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/selectDateButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/dateSelectionTextView"
                    android:text="Select Date"
                    android:textSize="16sp" />

            </RelativeLayout>

            <!-- Time Selection Section -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/date"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/timeIconImageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/timeSelectionTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="16dp"
                    android:layout_toEndOf="@id/timeIconImageView"
                    android:gravity="center"
                    android:text="Select Time"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/selectTimeButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@id/timeSelectionTextView"
                    android:text="Select Time"
                    android:textSize="16sp" />

            </RelativeLayout>

            <!-- Check Button -->
            <Button
                android:id="@+id/checkButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="140dp"
                android:text="Check"
                android:background="@color/lightGray"
                android:layout_marginBottom="10dp"
                android:textSize="16sp" />


        </androidx.cardview.widget.CardView>


        <View
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@android:color/transparent" />
    </RelativeLayout>
</RelativeLayout>
